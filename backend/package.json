{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "NODE_ENV=production tsx watch src/app.ts",
    "build": "npx rimraf dist && tsc",
    "start": "node ./dist/app.js",
    "db:push": "tsx --tsconfig tsconfig.json node_modules/.bin/drizzle-kit push",
    "db:generate": "tsx --tsconfig tsconfig.json node_modules/.bin/drizzle-kit generate",
    "db:migrate": "tsx --tsconfig tsconfig.json node_modules/.bin/drizzle-kit migrate",
    "render:build": "NODE_ENV=production npm install && npm run build && npm run db:generate && npm run db:migrate",
    "seed": "NODE_ENV=production tsx src/db/seed/runner.ts",
    "scrape": "tsx src/db/seed/scraper2.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@types/puppeteer": "^5.4.7",
    "better-auth": "^1.3.7",
    "config": "^4.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "puppeteer": "^24.17.0",
    "slugify": "^1.6.6",
    "stripe": "^18.5.0",
    "ts-node": "^10.9.2",
    "ws": "^8.18.3",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/pino": "^7.0.4",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.4",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
