# .env.example
# This file contains all the environment variables needed to run the application.
# Copy this file to .env.development.local for local development and fill in the values.

# --- Server Configuration ---
# The port the application will run on
PORT=8000
# The current version of the API (used in API paths)
VERSION=v1
# The application environment
NODE_ENV=development
# The base URL of this backend server
API_URL=http://localhost:8000
# The URL of the frontend application (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# --- Database Configuration ---
# The full connection string for your PostgreSQL database
# For local development, this might look like: postgresql://user:password@localhost:5432/databasename
# For Neon, get this from your Neon dashboard.
DATABASE_URL=

# --- Authentication (Better Auth) ---
# A long, random, secret string used to sign authentication tokens
BETTER_AUTH_SECRET=
# Google OAuth Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# GitHub OAuth Credentials
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# --- Payments (Stripe) ---
# Your Stripe secret key (sk_test_...)
STRIPE_SECRET_KEY=
# The secret for verifying incoming Stripe webhooks (whsec_...)
STRIPE_WEBHOOK_SECRET=
